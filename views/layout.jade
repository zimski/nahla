  body
    div( class="navbar navbar-inverse navbar-fixed-top", role="navigation")
      div.container-fluid
        div.navbar-header
          button(type="button", class="navbar-toggle" ,data-toggle="collapse" ,data-target=".navbar-collapse")
            span.sr-only Toggle  navigation
            span.icon-bar
            span.icon-bar
